<!-- generated by {{#projectInfo}}{{name}}, v{{version}}, {{homepage}}{{/projectInfo}} -->
<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}{{^title}}Chee Gallery{{/title}}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {{#css}}
    <link rel="stylesheet" href="{{.}}"/>
    {{/css}}
    <style type="text/css">
     .blueimp-gallery > .indicator > li {
         height: 27px;
         width: 27px;
     }
     .blueimp-gallery > .download {
         position: absolute;
         top: 15px;
         right: 45px;
         display: none;
     }
     .blueimp-gallery-controls > .download {
         display: block;
     }
     .header {
         height: 20px;
         width: 100%;
     }
     .header .text-muted {
         margin: 0;
         text-align: right;
     }
     .blueimp-gallery > .metadata {
         position: absolute;
         top: 50px;
         padding: 0 15px;
         display: none;
         width: 100%;
         font-size: 18px;
         line-height: 25px;
         opacity: 0.8;
         text-shadow: 0 0 2px #000;
         color: #fff;
     }
     .blueimp-gallery-controls > .metadata {
         display: block;
     }
     .metadata p {
         text-align: right;
     }
     .metadata ul.tags {
         list-style: none;
         padding: 0;
     }
     .metadata ul.tags > li {
         display: inline-block;
         margin-right: 3px;
     }
     a.thumb-link {
         margin-right: -3px;
     }
    </style>
  </head>
  <body>

    <div id="blueimp-gallery" class="blueimp-gallery" data-use-bootstrap-modal="false">
      <!-- The container for the modal slides -->
      <div class="slides"></div>
      <!-- Controls for the borderless lightbox -->
      <h3 class="title"></h3>

      {{#link-original}}
      <a class="download btn btn-primary" download>
        <i class="fa fa-download"></i>
        Download
      </a>
      {{/link-original}}

      <div class="metadata">
          <ul class="tags">
              <span class="label label-info">ferien</span>
              <span class="label label-info">harz</span>
          </ul>
          <p class="comment">
              Here are comment and tags to display.
          </p>
      </div>
      <a class="prev">&#8249;</a>
      <a class="next">&#8250;</a>
      <a class="close">&times;</a>
      <a class="play-pause"></a>
      <ol class="indicator"></ol>

      <!-- The modal dialog, which will be used to wrap the lightbox content -->
      <div class="modal fade">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" aria-hidden="true">&times;</button>
              <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body next"></div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default pull-left prev">
                <i class="fa fa-chevron-left"></i>
                Previous
              </button>
              <button type="button" class="btn btn-primary next">
                Next
                <i class="fa fa-chevron-right"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid header">
        <div class="row">
            <div class="col-md-12">
                {{#projectInfo}}
                    <p class="text-muted">Generated by <a href="{{homepage}}"><i class="fa fa-github"></i> {{name}} {{version}}</a></p>
                {{/projectInfo}}
            </div>
        </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
            <h1>{{title}}{{^title}}Gallery <i class="fa fa-smile-o"></i>{{/title}}</h1>
            <br>

{{#files}}

                <a href="{{scaled-image}}" class="thumb-link" title="{{filename}} ({{model}}), {{created}}, {{#_format}}~:length{{/_format}}" data-comment="{{comment}}" data-tag="{{tag}}" {{#link-original}}data-download="{{path}}"{{/link-original}} data-gallery>
                    <img src="{{thumbnail}}" alt="{{filename}} ({{model}}), {{created}}">
                </a>

{{/files}}
<!--       -->
        </div>
      </div>
    </div>

    {{#js}}
    <script src="{{.}}"></script>
    {{/js}}
    <script>
     $('#blueimp-gallery').on('slide', function(event, index, slide) {
         var link = $($(this).data('gallery').list[index]);
         var downloadUrl = link.data('download'),
             tags = link.data('tag'),
             comment = link.data('comment');
         if (downloadUrl) {
             var downloadLink = $(event.target).find('.download');
             downloadLink.attr('href', downloadUrl);
         }
         var tagContainer = $(event.target).find('.metadata').find('.tags');
         tagContainer.empty();
         if (tags && tags != "") {
             var array = tags.split('|');
             for (var i=0; i<array.length; i++) {
                 var tag = array[i];
                 if (tag && tag != "") {
                     tagContainer.append('<li><span class="label label-info">' + tag + '</span></li>');
                 }
             }
         }
         var commentContainer = $(event.target).find('.metadata').find('.comment');
         commentContainer.empty();
         if (comment) {
             commentContainer.html(marked(comment));
         }
     });
    </script>
  </body>
</html>
